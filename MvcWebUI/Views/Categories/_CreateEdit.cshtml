@model CategoryModel

<h4>Category</h4>
<hr />
<div class="row">
    <div class="col-12">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="row mb-3">
                <label asp-for="Name" class="col-2 col-form-label"></label>
                <div class="col-5">
                    <input asp-for="Name" class="form-control" placeholder="Enter Name..." />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
            </div>
            <div class="row mb-3">
                <label asp-for="Description" class="col-2 col-form-label"></label>
                <div class="col-5">
                    <textarea asp-for="Description" class="form-control" placeholder="Enter Description..."></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
            </div>
            <input type="hidden" asp-for="Id" />

            <div class="row mb-3">
                <div class="offset-2 col-5">
                    <input type="submit" value="Save" class="btn btn-dark" />
                    &nbsp;&nbsp;
                    <button type="reset" class="btn btn-outline-secondary">Reset</button>
                    &nbsp;&nbsp;
                    <a asp-action="Index">Back to Category List</a>
                </div>
            </div>
        }
    </div>
</div>